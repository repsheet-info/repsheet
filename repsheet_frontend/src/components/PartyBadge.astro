---
import { Badge } from '@astrojs/starlight/components'

interface Props {
  party: string;
}

const partyColors = {
  "Conservative": "#1A4782",   // Conservative blue
  "Liberal":      "#D71920",   // Liberal red
  "Green Party":        "#3D9B35",   // Green Party green
  "NDP":          "#F6851B",   // NDP orange
  "Bloc Québécois": "#005DAA",  // Bloc Québécois blue
  "People's Party": "#639"  // People's Party black
};

const { party } = Astro.props;


---

<Badge style={{ 
  backgroundColor: partyColors[party as keyof typeof partyColors],
  border: 0,
  fontFamily: "inherit",
  }} text={party} size="large"/>


