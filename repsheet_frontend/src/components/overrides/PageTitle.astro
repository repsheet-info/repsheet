---

const title = Astro.locals.starlightRoute.entry.data.title;
const subtitle = Astro.locals.starlightRoute.entry.data.subtitle;

---

<h1 id="_top">{title}</h1>
{subtitle && <h2 class="subtitle">{subtitle}</h2>}
<style>
	h1 {
		margin-top: 1rem;
		font-size: var(--sl-text-h1);
		line-height: var(--sl-line-height-headings);
		font-weight: 600;
		color: var(--sl-color-white);
	}
	.subtitle {
		font-size: var(--sl-text-h2);
		line-height: var(--sl-line-height-headings);
		font-weight: 500;
		color: var(--sl-color-gray-2);
		margin-top: 0.5rem;
		margin-bottom: 1rem;
	}
</style>
